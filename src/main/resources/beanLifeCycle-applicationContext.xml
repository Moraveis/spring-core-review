<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--     Define your beans here -->
    <bean id="myFortuneService" class="org.example.beans.HappyFortuneService"/>
    <bean id="randomFortuneService" class="org.example.beans.RandomFortuneService"/>

    <bean id="coach" class="org.example.beans.TrackCoach"
          init-method="initMethod"
          destroy-method="destroyMethod">
        <constructor-arg ref="myFortuneService"/>
    </bean>

    <bean id="anotherCoach" class="org.example.beans.SoccerCoach" scope="prototype">
        <constructor-arg ref="randomFortuneService"/>
    </bean>

</beans>





